    <?php
        $active = null;

        if(isset($data["room"]))
        {
            $active = $data["room"]->getId();
        }

        foreach($data["categories"] as $category)
        {
            ?>
            <h3><?= $category["category"]->getName(); ?></h3>
            <ul>
                <?php
                foreach($category["rooms"] as $room)
                {
                    ?>
